<style type="text/css">
    span {
        background: #fff;
        border: 1px solid green;
        float: left;
        color: #000000;
        font-family: "黑体";
        font-size: 16px;
        margin: 3px;
        width: 50px;
        text-align: center;
        overflow: hidden;
        padding: 2px, 5px, 2px, 5px;
    }

    .btn {
        width: 100px;
        height: 40px;
        font-family: "黑体";
        font-size: 18px;
    }

    .btn_sm {
        width: 80px;
        height: 30px;
        font-family: "黑体";
        font-size: 16px;
    }

    ul li {
        width: 100%;
        float: left;
