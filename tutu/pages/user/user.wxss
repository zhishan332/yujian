/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.image {
  width: 100%;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}

.card {
  width: 80%;
  margin: 70px 20px 20px 20px;
  padding: 20px;
  border: 1rpx solid lightgrey;
  text-align: center;
  background-color: whitesmoke;
  box-shadow: 5px 5px 3px #888;
  border-radius: 20rpx;
}

.detail {
  margin-top: 30rpx;
}

.tip {
  margin-top: 10px;
  font-size: 11px;
  text-align: center;
}
