/*滑动样式*/
.hSwiper{
	height: 100%;
	overflow: hidden;
	position: relative;
}

.hSwiperCon{
	height: 100%;
	will-change: transform;
	position: absolute;
}
.item{
	width: 100%;
	height: 100%;
	position:relative;
	float: left;
	box-sizing:border-box;
}
.film-cover {
    position: relative;
    border-radius: 0rpx;
    height: 100%;
    overflow: hidden;
}

.film-rating {
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50rpx;
    padding-right: 20rpx;
    font-size: 12px;
    text-align: right;
    line-height: 50rpx;
    background-color: rgba(0, 0, 0, .2); 
    color: gainsboro;
}
.img-title{
  margin-left: 10px;
  float: left
}
.img-hot{
  float: right
}