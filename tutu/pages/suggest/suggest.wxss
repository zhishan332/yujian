.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 5px 1px #ccc;
  margin: 8px;
  position: relative;
}

.loadmore {
  border: 0px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 5px 1px #ccc;
  margin: 8px;
}

.image {
  width: 100%;
  height: 240px;
}

.title {
  padding: 10rpx;
  font-size: 14px;
}

.film-rating {
  width: 98%;
  padding-left: 10rpx;
  font-size: 12px;
  text-align: left;
  line-height: 40rpx;
   /* background-color: rgba(0, 0, 0, .2);   */
  color: gainsboro;
}

